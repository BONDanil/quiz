<%= turbo_stream_from :players %>

<%= turbo_frame_tag :players do %>
  <table class="table">
    <thead>
    <tr>
      <th scope="col">Nickname</th>
      <th scope="col">Action</th>
    </tr>
    </thead>
    <tbody id="players-list">
      <%= render partial: 'quiz_sessions/synchronous/player', collection: @quiz_session.players, as: :player %>
    </tbody>
  </table>
<% end %>
