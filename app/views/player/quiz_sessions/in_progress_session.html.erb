<%= turbo_frame_tag 'player-quiz' do %>
  <!--  TODO: hide answer-->
  <%= render 'quiz_sessions/default/question', question: @quiz_session.questions[@quiz_session.current_question_index] %>
  <br>
  <%= form_with url: "/quiz_sessions/#{@quiz_session.id}/answer", method: :post do |f| %>
    <%= f.label 'Your answer:' %>
    <%= f.text_field :answer %>
    <%= f.submit 'Send' %>
  <% end %>
<% end %>
